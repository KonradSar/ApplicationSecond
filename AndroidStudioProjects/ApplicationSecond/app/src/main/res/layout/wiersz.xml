<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dndroid="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/zdjecieFlagi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/cancelbtn"
        />
    <TextView
        android:id="@+id/nazwaPanstwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/zdjecieFlagi"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:text="Panstwo"
        />
    <TextView
        android:id="@+id/nazwaStolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stolica"
        android:layout_below="@+id/nazwaPanstwa"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/zdjecieFlagi"
        />

</RelativeLayout>
