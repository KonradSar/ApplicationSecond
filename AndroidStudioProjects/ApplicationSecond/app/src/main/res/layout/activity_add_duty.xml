<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.konrad.applicationsecond.AddProduct"
    android:background="@drawable/duty2"
    >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/wydarzenieLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/white">
        <EditText
            android:id="@+id/wydarzenie"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/wydarzenie"
            android:textColor="@color/white"
            android:inputType="text"
            android:layout_gravity="center" />`
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/choosen_date"
        android:paddingLeft="2dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/date2"
        android:textColor="@color/white"
        android:layout_below="@+id/wydarzenieLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/date2"
        >
        <Button
            android:id="@+id/btnAddToList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="ADD TO LIST"
            />
        <Button
            android:id="@+id/btnGoToList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="GO TO LIST"
            />
    </LinearLayout>

</RelativeLayout>